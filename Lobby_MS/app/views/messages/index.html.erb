<html>
  <!-- Theme Made By www.w3schools.com - No Copyright -->
  <title>Bootstrap Theme Simply Me</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <style>
  body {
      font: 50px Ubuntu, sans-serif;
      line-height: 1.8;
      color: #f5f6f7;
  }
  p {font-size: 16px;}
  .margin {margin-bottom: 45px;}
  .bg-1 { 
      background-color: #1abc9c; /* Green */
      color: #ffffff;
  }
  .bg-2 { 
      background-color: #474e5d; /* Dark Blue */
      color: #ffffff;
  }
  .bg-3 { 
      background-color: #ffffff; /* White */
      color: #555555;
  }
  .bg-4 { 
      background-color: #000000; /* Black Gray */
      color: #fff;
  }
  .container-fluid {
      padding-top: 70px;
      padding-bottom: 70px;
  }
  .navbar {
      padding-top: 15px;
      padding-bottom: 15px;
      border: 0;
      border-radius: 0;
      margin-bottom: 0;
      font-size: 12px;
      letter-spacing: 5px;
  }
  .navbar-nav  li a:hover {
      color: #1abc9c !important;
  }
  .well{
    background-color: rgb(255, 220, 175) !important;
  }
  .modal-header{
    background-color: rgb(200, 0, 0) !important;
  }
  </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/messages">Jarkko-Coffee</a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav navbar-right">
        <li><a href="#" class="btn btn-danger btn-lg"><font color="white">
          LOG OUT <span class="glyphicon glyphicon-log-out"></span>
        </a></li>
      </ul>
    </div>
  </div>
</nav>

<!-- First Container -->
<div class="container-fluid bg-1 text-center">
  <div class="container">
  <div class="panel-group">
    <div class="panel panel-primary">
      <div class="panel-heading"><p align="left">LOBBY</p></div>
      <div class="panel-body">
        
        <!-- Left-aligned media object -->
  
      
      <% @messages.each do |message| %>

      <div class="well well-sm">
        
        <div class="media">
    <div class="media-left">
      <img src="https://cdn-images-1.medium.com/max/340/1*kpAULnGoofvE3RCcem0_nw.png" class="media-object" style="width:100px">
    </div>
    <div class="media-body">
          
            <p align="LEFT" class="sansserif"><font color="black">Usuario: <%= message.iduser %> (<%= message.name %>) [Sent at: <%= message.created_at %>]</font></p>
            <p align="left" class="sansserif"><font color="black"><%= message.content %></font></p>
            <!-- <%= link_to 'Show', message %> -->
            <p align ="right">
            <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#myModal1"><font color ="black">EDIT MESSAGE     <span class="glyphicon glyphicon-pencil"></span></font></button>



            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#myModal2">DELETE MESSAGE     <span class="glyphicon glyphicon-remove"></span></button>
            </p>

<div class="modal fade" id="myModal1" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><font color = "white"><span class="glyphicon glyphicon-remove"></span></font></button>
          <p>Error</p>
        </div>
        <div class="modal-body">
          <p align="left"><font color = "black">You don't have permission to edit messages.</font></p>
        </div>
        <div class="modal-footer">
          <p align="center"><button type="button" class="btn btn-primary btn-lg" data-dismiss="modal">Close</button></p>
        </div>
      </div>
      </div>
  </div>

<div class="modal fade" id="myModal2" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><font color = "white"><span class="glyphicon glyphicon-remove"></span></font></button>
          <p>Error</p>
        </div>
        <div class="modal-body">
          <p align="left"><font color = "black">You don't have permission to delete messages.</font></p>
        </div>
        <div class="modal-footer">
          <p align="center"><button type="button" class="btn btn-primary btn-lg" data-dismiss="modal">Close</button></p>
        </div>
      </div>
      </div>
  </div>



            <!-- <%= link_to 'Edit', edit_message_path(message) %> -->
            <!-- <%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %> -->
          
        
    </div>
  </div>


      </div>
      <% end %>

      

      </div>
    </div>

    
  </div>
</div>

<p id="notice"><%= notice %></p>

  <a href="/messages/new" class="btn btn-primary btn-lg"><font color="white">Send a new Message     <span class="glyphicon glyphicon-plus"></span>
        </a>
  <!-- <%= link_to 'New Message', new_message_path %> -->

</div>

<!-- Footer -->
<footer class="container-fluid bg-4 text-center">
  
</footer>
</body>
</html>