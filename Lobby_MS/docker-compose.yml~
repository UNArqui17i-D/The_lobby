version: '2'
services:
  db:
    image: mysql:5.7
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: Lobby_MS
      MYSQL_USER: root
      MYSQL_PASSWORD: root
    ports:
      - "3308:3306"
  webapp:
    build: .
    command: bundle exec rails s -p 4010 -b '192.168.99.101'
    volumes:
      - .:/railsapi
    ports:
      - "4010:4010"
    depends_on:
      - db
    environment:
      DB_USER: root
      DB_NAME: Lobby_MS
      DB_PASSWORD: root
      DB_HOST: db
